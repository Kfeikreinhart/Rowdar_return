server {
 listen 80;
 listen [::]:80;
location / {
         include /etc/nginx/proxy_params;
         proxy_pass http://localhost:8501/;
        proxy_redirect off;
        proxy_http_version 1.1;
        # Also requires websocket:
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
     }
}
